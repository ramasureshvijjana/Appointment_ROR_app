<center><br><br><br><h2>Log in</h2><br><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-outline mb-4">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width:500px;", placeholder:'Enter Email', class:"form-control"  %>
  </div>

  <div class="form-outline mb-4">
  
    <%= f.password_field :password, autocomplete: "current-password", style:"width:500px;", placeholder:'Enter Password', class:"form-control"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-success' %>
  </div>
<% end %>

<br><%= render "devise/shared/links" %>
</center>