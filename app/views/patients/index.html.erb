<h1 align="center">Patients</h1>

<table class="table" , style="width:1100px;" align="center">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Problem</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Appointment Date and Time</th>
      <!-- <th>Doctor</th> -->
      <!-- <th>Appointment Date</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.problem %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.email %></td>
         <td><%= patient.try(:oppointment_time).try(:strftime, ' %e / %B / %Y, Time:  %T') %></td>
       <!--  <td><%= patient.doctor_id %></td> -->
        <td><%#= patient.oppointment_date %></td>
        <td><%= link_to 'Show', patient %></td>
        <!-- <td><%#= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, :method => :delete, data: { confirm: 'Are you sure?' } %></td> --> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>


